---
import type { PostPage } from '~/types'
import PagesNav from '@cp/common/PagesNav.astro'
import PostList from '@cp/post/BlogList.astro'
import Layout from './Layout.astro'

interface Props {
  page: PostPage
  title: string
  h1: string
}

const { page, title, h1 } = Astro.props
---

<Layout title={title}>
  <main
    class="main-width flex flex-col items-center px-6"
  >
    <h1 class="mb-6 text-xl">
      {h1}

      <a
        class="text-3 underline hover:text-primary"
        href="/archives"
      >（归档）</a>
    </h1>

    <PostList posts={page.data} />

    <PagesNav
      prev={{
        link: page.url.prev,
      }}
      next={{
        link: page.url.next,
      }}
    />
    <slot name="footer" />
  </main>
</Layout>
